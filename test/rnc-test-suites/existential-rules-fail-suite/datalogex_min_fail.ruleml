<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../../relaxng/test/myng-b07-d7-a7-l1-p001-i40-t200-q0-e0-sf.rnc"?>
<RuleML xmlns="http://ruleml.org/spec">


  <!-- a syntactic example rulebase for testing the RuleML Existential Rules sublanguage -->

  <Assert>
    <!-- An existential head cannot contain disjunctions. -->
    <Forall>
      <Var>x</Var>
      <Implies>
        <if>
          <Atom>
            <Rel>mother</Rel>
            <Ind>Jane</Ind>
            <Var>x</Var>
          </Atom>
        </if>
        <then>
          <Exists>
            <Var>y</Var>
            <Or>
              <Atom>
                <Rel>son</Rel>
                <Var>x</Var>
                <Var>y</Var>
              </Atom>
              <Atom>
                <Rel>married</Rel>
                <Var>y</Var>
              </Atom>
            </Or>
          </Exists>
        </then>
      </Implies>
    </Forall>

    <!-- An existential head cannot contain equations. -->
    <Forall>
      <Var>x</Var>
      <Implies>
        <if>
          <Atom>
            <Rel>mother</Rel>
            <Ind>Jane</Ind>
            <Var>x</Var>
          </Atom>
        </if>
        <then>
          <Exists>
            <Var>y</Var>
              <Equal>
                <Var>x</Var>
                <Var>y</Var>
              </Equal>
          </Exists>
        </then>
      </Implies>
    </Forall>
    
    <!-- The heads and bodies of existential rules cannot contain conjunctions (unless the conjunctive heads module is also included. -->
    <!-- Every employee who directs a department is a manager, and supervises at least another employee who works in the same department -->  
    <Forall>
      <Var>E</Var>
      <Var>P</Var>
      <Implies>
        <if>
          <And>            
            <Atom>
              <Rel>employee</Rel>
              <Var>E</Var>
            </Atom>
            <Atom>
              <Rel>directs</Rel>
              <Var>E</Var>
              <Var>P</Var>
            </Atom>
          </And>
        </if>
        <then>
          <Exists>
            <Var>E'</Var>
            <And>
              <Atom>
                <Rel>manager</Rel>
                <Var>E</Var>
              </Atom>
              <Atom>
                <Rel>supervises</Rel>
                <Var>E</Var>
                <Var>E'</Var>
              </Atom>
              <Atom>
                <Rel>works_in</Rel>
                <Var>E'</Var>
                <Var>P</Var>
              </Atom>
            </And>
          </Exists>
        </then>
      </Implies>
    </Forall>
    
  </Assert>

</RuleML>
