<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../../relaxng/test/myng-b0f-d6-a7-l1-p001-i00-t220-q0-e0-sc.rnc" type="application/relax-ng-compact-syntax"?>
<RuleML xmlns="http://ruleml.org/spec">
  <!-- a syntactic example rulebase for testing the RuleML Datalog with Equality sublanguage -->
  <act index="1">
    <Assert mapMaterial="yes" mapDirection="bidirectional">
      <!-- Oriented Equations are allowed as facts-->
      <formula>
        <Equal oriented="yes">
          <left>
            <Ind>Bill</Ind>
          </left>
          <right>
            <Ind>William</Ind>
          </right>
        </Equal>
      </formula>
      <!-- Equations may be universally quantified, although this is not very meaningful.
         This is a degenerate case, corresponding to the body of an implication being empty.-->
      <formula>
        <Forall>
          <declare>
            <Var>x</Var>
          </declare>
          <formula>
            <Equal oriented="yes">
              <left>
                <Var>x</Var>
              </left>
              <right>
                <Var>x</Var>
              </right>
            </Equal>
          </formula>
        </Forall>
      </formula>
      <!-- Equations are allowed in the body of implications, but this also is not very meaningful,
         as the equation could be removed by substitution. -->
      <formula>
        <Forall>
          <declare>
            <Var>x</Var>
          </declare>
          <formula>
            <Implies material="yes" direction="bidirectional">
              <if>
                <Equal oriented="yes">
                  <left>
                    <Var>x</Var>
                  </left>
                  <right>
                    <Ind>Jane</Ind>
                  </right>
                </Equal>
              </if>
              <then>
                <Atom>
                  <op><Rel>son</Rel></op>
                  <arg index="1"><Var>Jack</Var></arg>
                  <arg index="2"><Var>x</Var></arg>
                </Atom>
              </then>
            </Implies>
          </formula>
        </Forall>
      </formula>
      <!-- Functionality Constraint: Everyone has at most one mother. -->
      <formula>
        <Forall>
          <declare>
            <Var>x</Var>
          </declare>
          <declare>
            <Var>y</Var>
          </declare>
          <declare>
            <Var>z</Var>
          </declare>
          <formula>
            <Implies material="yes" direction="bidirectional">
              <if>
                <And>
                  <formula>
                    <Atom>
                      <op><Rel>mother</Rel></op>
                      <arg index="1"><Var>x</Var></arg>
                      <arg index="2"><Var>z</Var></arg>
                    </Atom>
                  </formula>
                  <formula>
                    <Atom>
                      <op><Rel>mother</Rel></op>
                      <arg index="1"><Var>y</Var></arg>
                      <arg index="2"><Var>z</Var></arg>
                    </Atom>
                  </formula>
                </And>
              </if>
              <then>
                <Equal oriented="yes">
                  <left>
                    <Var>x</Var>
                  </left>
                  <right>
                    <Var>y</Var>
                  </right>
                </Equal>
              </then>
            </Implies>
          </formula>
        </Forall>
      </formula>
    </Assert>
  </act>
</RuleML>