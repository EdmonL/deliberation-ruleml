<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../../relaxng/test/disdatalogplus_min_normal.rnc"
  type="application/relax-ng-compact-syntax"?>
<RuleML xmlns="http://ruleml.org/spec"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- a syntactic example rulebase for testing the RuleML Disjunctive Datalog Plus sublanguage -->
  <act index="1">
    <Assert>
      <!-- Disjuntive Rules 
      Union classes 
      Every employee is a manager or a worker (or both). -->
      <formula>
        <Forall>
          <declare>
            <Var>E</Var>
          </declare>
          <formula>
            <Implies>
              <if>
                <Atom>
                  <op><Rel>Employee</Rel></op>
                  <arg index="1"><Var>E</Var></arg>
                </Atom>
              </if>
              <then>
                <Or>
                  <formula index="1">
                    <Atom>
                      <op><Rel>Manager</Rel></op>
                      <arg index="1"><Var>E</Var></arg>
                    </Atom>
                  </formula>
                  <formula index="2">
                    <Atom>
                      <op><Rel>Worker</Rel></op>
                      <arg index="1"><Var>E</Var></arg>
                    </Atom>
                  </formula>
                </Or>
              </then>
            </Implies>
          </formula>
        </Forall>
      </formula>
    </Assert>
  </act>
  <act index="2">
    <Assert>
      <!-- Existential Disjunctive Rules 
      Exceptions to subsumption.
      Every employee, other than the CEO, has a supervisor. -->
      <formula>
        <Forall>
          <declare>
            <Var>E</Var>
          </declare>
          <formula>
            <Implies>
              <if>
                <Atom>
                  <op><Rel>Employee</Rel></op>
                  <arg index="1"><Var>E</Var></arg>
                </Atom>
              </if>
              <then>
                <Or>
                  <formula index="1">
                    <Atom>
                      <op><Rel>CEO</Rel></op>
                      <arg index="1"><Var>E</Var></arg>
                    </Atom>
                  </formula>
                  <formula index="2">
                    <Exists>
                      <declare>
                        <Var>S</Var>
                      </declare>
                      <formula>
                        <Atom>
                          <op><Rel>Supervises</Rel></op>
                          <arg index="1"><Var>S</Var></arg>
                          <arg index="2"><Var>E</Var></arg>
                        </Atom>
                      </formula>
                    </Exists>
                  </formula>
                </Or>
              </then>
            </Implies>
          </formula>
        </Forall>
      </formula>
    </Assert>
  </act>
  <act index="3">
    <Assert>
      <formula>
        <Implies>
          <if>
            <Equal>
              <left><Ind>a</Ind></left>
              <right><Ind>b</Ind></right>
            </Equal>
          </if>
          <then>
            <Or/>
          </then>
        </Implies>
      </formula>
    </Assert>
  </act>
  
</RuleML>