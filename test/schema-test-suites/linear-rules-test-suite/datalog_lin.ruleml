<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../../relaxng/datalog_lin.rnc"?>
<RuleML xmlns="http://ruleml.org/spec">


  <!-- a syntactic example rulebase for testing the RuleML Linear Rules sublanguage -->

  <Assert>
    <Forall>
      <Var>y</Var>
      <Implies>
        <if>
          <Atom>
            <Rel>friend</Rel>
            <Ind>Jane</Ind>
            <Var>y</Var>
          </Atom>
        </if>
        <then>
          <Atom>
            <Rel>friend</Rel>
            <Var>y</Var>
            <Var>Jane</Var>
          </Atom>
        </then>
      </Implies>
    </Forall>
  </Assert>
</RuleML>
