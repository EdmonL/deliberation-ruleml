<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../../relaxng/datalogex.rnc"?>
<RuleML xmlns="http://ruleml.org/spec">


  <!-- a syntactic example rulebase for testing the RuleML Existential Rules sublanguage -->

  <Assert>
    <Forall>
      <Var>x</Var>
      <Implies>
        <if>
          <Atom>
            <Rel>mother</Rel>
            <Ind>Jane</Ind>
            <Var>x</Var>
          </Atom>
        </if>
        <then>
          <Exists>
            <Var>y</Var>
            <Atom>
              <Rel>son</Rel>
              <Var>x</Var>
              <Var>y</Var>
            </Atom>
          </Exists>
        </then>
      </Implies>
    </Forall>
  </Assert>

</RuleML>
