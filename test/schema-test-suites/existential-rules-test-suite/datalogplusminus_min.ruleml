<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../../relaxng/datalogplusminus_min_relaxed.rnc"?>
<RuleML xmlns="http://ruleml.org/spec">


  <!-- a syntactic example rulebase for testing the RuleML Datalog Plus sublanguage -->

  <Assert>
    <!-- Equations are allowed as facts-->
    <Equal>
      <Ind>Bill</Ind>
      <Ind>William</Ind>
    </Equal>

    
    <!-- Equations are allowed in the body of guarded (existential) implications, 
         but this is not very meaningful,
         as the equation could be removed by substitution. -->
    <Forall>
      <Implies>
        <guard>
          <Atom><Rel>P</Rel><Var>x</Var></Atom>
        </guard>
        <if>
          <Equal>
            <Ind>Jane</Ind>
            <Var>x</Var>
          </Equal>
        </if>
        <then>
          <Exists>
            <Var>y</Var>
            <Atom>
              <Rel>Q</Rel>
              <Var>x</Var>
              <Var>y</Var>
            </Atom>
          </Exists>
        </then>
      </Implies>
    </Forall>
    
    <!-- Disjoint Classes -->
    <Forall>
      <Implies>
        <guard>
          <Atom><Rel>P</Rel><Var>x</Var></Atom>          
        </guard>        
        <if>
          <Atom><Rel>Q</Rel><Var>x</Var></Atom>            
        </if>
        <then>
          <Or/>
        </then>
      </Implies>
    </Forall>
    
    <!-- Functionality Constraint: Everyone has at most one mother. -->
    <Forall>
      <Var>x</Var>
      <Var>y</Var>
      <Var>z</Var>
      <Implies>
        <if>
          <And>
            <Atom>
              <Rel>mother</Rel>
              <Var>x</Var>
              <Var>z</Var>
            </Atom>
            <Atom>
              <Rel>mother</Rel>
              <Var>y</Var>
              <Var>z</Var>
            </Atom>
          </And>
        </if>
        <then>
          <Equal>
            <Var>x</Var>
            <Var>y</Var>
          </Equal>
        </then>
      </Implies>
    </Forall>

    <!-- Negative Constraints are allowed.
         No one is their own mother. -->
    <Forall>
      <Var>x</Var>
      <Implies>
        <if>
          <Atom>
            <Rel>mother</Rel>
            <Var>x</Var>
            <Var>x</Var>
          </Atom>
        </if>
        <then>
          <Or/>
        </then>
      </Implies>
    </Forall>
    
    <!-- Equations may appear in the body of negative constraints.
         The simplest case is the assertion that two individuals
         are different.-->
    <Implies>
      <if>
        <Equal>
          <Ind>a</Ind>
          <Ind>b</Ind>
        </Equal>        
      </if>
      <then>
        <Or/>
      </then>
    </Implies>
    

  </Assert>

</RuleML>
