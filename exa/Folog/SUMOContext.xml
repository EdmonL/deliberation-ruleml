<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="http://ruleml.org/1.0/relaxng/folog_relaxed.rnc" type="compact"?>
<RuleML xmlns="http://www.ruleml.org/spec" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- A Contextual Knowledge Base -->
    <Context iri="http://alt2is.com/SUMORuleML">
    <Assert>
        <!-- (subclass Latitude Region)-->
        <Forall>
            <Var>X</Var>
            <Implies>
                <Atom>
                    <Rel>Latitude</Rel>
                    <Var>X</Var>
                </Atom>
                <then>
                    <Atom>
                        <Rel>Region</Rel>
                        <Var>X</Var>
                    </Atom>
                </then>
            </Implies>
        </Forall>
        <!--(instance objectGeographicCoordinates TernaryPredicate)
            (domain objectGeographicCoordinates 1 Object)
            (domain objectGeographicCoordinates 2 Latitude)
            (domain objectGeographicCoordinates 3 Longitude) -->
        <Forall>
            <Var>X</Var>
            <Var>Y</Var>
            <Var>Z</Var>
            <Implies>
                <And>
                    <Atom>
                        <Rel>Object</Rel>
                        <Var>X</Var>
                    </Atom>
                    <Atom>
                        <Rel>Latitude</Rel>
                        <Var>Y</Var>
                    </Atom>
                    <Atom>
                        <Rel>Longitude</Rel>
                        <Var>Z</Var>
                    </Atom>
                </And>
                <if>
                    <Atom>
                        <Var>X</Var>
                        <Rel>objectGeographicCoordinates</Rel>
                        <Var>Y</Var>
                        <Var>Z</Var>
                    </Atom>
                </if>
            </Implies>
        </Forall>
    </Assert>
    </Context>
    <!-- A Bridge Rule -->
    <Assert level="bridge">
        <Forall level="bridge">
            <Var level="bridge">X</Var>
            <Var level="bridge">49.27</Var>
            <Var level="bridge">-123.11</Var>
            <Equivalent level="bridge">
                <Context iri="urn:alt2is:gml311">
                    <Atom>
                        <Ind>X</Ind>
                        <Rel>hasLocation</Rel>
                        <Data xmlns:gml="http://www.opengis.net/gml"
                            xsi:schemaLocation="http://www.opengis.net/gml 
            http://dp.schemas.opengis.net/05-029r4/gml/3.1.1/profiles/point/0.4.0/gml311PointProfile.xsd">
                            <gml:Point srsDimension="2" srsName="urn:ogc:def:crs:EPSG:6.6:4326">
                                <gml:pos>49.27 -123.11</gml:pos>
                            </gml:Point>
                        </Data>
                    </Atom>
                </Context>
                <Context iri="http://alt2is.com/SUMORuleML"/>
                    <Atom>
                        <Ind>X</Ind>
                        <Rel>objectGeographicCoordinates</Rel>
                        <Data>49.27</Data>
                        <Data>-123.11</Data>
                    </Atom>
                </Context>
            </Equivalent>
        </Forall>
    </Assert>
</RuleML>
